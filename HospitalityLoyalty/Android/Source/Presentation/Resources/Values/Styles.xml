<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <bool name="DetailScreenFitsSystemWindows">false</bool>
  
  <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:windowBackground">@color/backgroundcolor</item>

    <item name="colorPrimary">@color/accent</item>
    <item name="colorPrimaryDark">@color/accentdark</item>

    <item name="colorControlNormal">@color/accentnormal</item>
    <item name="colorControlActivated">@color/accentactivated</item>
    <item name="colorControlHighlight">@color/accenthighlight</item>

    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="BaseThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@color/backgroundcolor</item>

    <item name="colorPrimary">@color/accent</item>
    <item name="colorPrimaryDark">@color/accentdark</item>

    <item name="colorControlNormal">@color/accentnormal</item>
    <item name="colorControlActivated">@color/accentactivated</item>
    <item name="colorControlHighlight">@color/accenthighlight</item>

    <item name="colorAccent">@color/accentactivated</item>

    <item name="android:navigationBarColor">@color/accent</item>
  </style>

  <style name="BaseThemeNoStatusBar" parent="@style/BaseThemeNoActionBar">
    <!--<item name="android:windowTranslucentStatus">true</item>-->
  </style>

  <style name="BaseDetailTheme" parent="@style/BaseThemeNoActionBar">
  </style>

  <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimaryDark">@color/accentdark</item>
    <item name="android:windowBackground">@color/accent</item>
    <!--<item name="android:windowBackground">@drawable/splash</item>-->
  </style>

  <style name="AppBarTheme">
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
  </style>

  <style name="AppBarDetailTheme" parent="@style/AppBarTheme">
  </style>

  <style name="Dialog">
    <item name="android:background">@color/transparent</item>
  </style>

  <style name="ApplicationTheme" parent="BaseTheme">
    <item name="android:progressBarStyleHorizontal">@style/ProgressBarPresentation</item>
    <item name="android:listViewStyle">@style/ListViewPresentation</item>
    <item name="android:listViewWhiteStyle">@style/ListViewPresentation.White</item>
    <item name="android:spinnerItemStyle">@style/SpinnerItemPresentation</item>
  </style>

  <style name="ApplicationThemeFullyTransparent" parent="ApplicationTheme">
    <item name="windowActionBarOverlay">true</item>
  </style>

  <style name="ApplicationThemeNoShadow" parent="ApplicationTheme">
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="ApplicationThemeHalfTransparent" parent="ApplicationTheme">
    <item name="windowActionBarOverlay">true</item>
    <item name="colorPrimary">@color/transparent</item>
  </style>

  <style name="SelectableListItem">
    <item name="android:foreground">@drawable/selecteble_background</item>
  </style>
  
  <!-- LIST -->

  <style name="ListView">
    <item name="android:background">@color/transparent</item>
    <item name="android:cacheColorHint">@color/transparent</item>
    <item name="android:overScrollHeader">@null</item>
    <item name="android:overScrollFooter">@null</item>
    <item name="android:scrollbarStyle">outsideOverlay</item>
  </style>

  <style name="InsetListView" parent="@style/ListView">
    <item name="android:paddingLeft">@dimen/CardMargin</item>
    <item name="android:paddingRight">@dimen/CardMargin</item>
  </style>

  <style name="ListItem">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    <item name="android:gravity">center_vertical</item>
  </style>
  
  <!-- LIST END -->

  <!-- CARD -->

  <style name="CardLayout">
    <item name="android:orientation">horizontal</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">@dimen/CardHalfMargin</item>
    <item name="android:paddingRight">@dimen/CardHalfMargin</item>
  </style>

  <!-- CARD END -->
  
  <!-- BUTTON -->

  <style name="CustomBorderlessButton" parent="@style/Widget.AppCompat.Light.ActionButton">
    <item name="android:background">@drawable/selecteble_background</item>
  </style>

  <style name="CustomBorderlessTransparentButton" parent="@style/Button">
    <item name="android:minHeight">@dimen/MinTouchHeight</item>
    <item name="android:minWidth">@dimen/MinTouchHeight</item>
    <item name="android:background">@drawable/selecteble_background</item>
  </style>

  <style name="CustomBorderlessTransparentButtonPadding" parent="@style/Button">
    <item name="android:minHeight">@dimen/MinTouchHeight</item>
    <item name="android:minWidth">@dimen/MinTouchHeight</item>
    <item name="android:background">@drawable/selecteble_background</item>
    <item name="android:paddingLeft">@dimen/BasePadding</item>
    <item name="android:paddingRight">@dimen/BasePadding</item>
  </style>

  <style name="FloatingActionButton">
  </style>
  
  <!-- BUTTON END -->
  
  <!-- DIVIDER -->

  <style name="DividerLayout">
    <item name="android:divider">@drawable/divider_vertical_bright_opaque</item>
    <item name="android:showDividers">middle</item>
    <item name="android:dividerPadding">12dp</item>
  </style>

  <style name="LightHorizontalDividerPadding">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">@drawable/divider_vertical_bright_opaque</item>
    <item name="android:layout_marginLeft">12dp</item>
    <item name="android:layout_marginRight">12dp</item>
  </style>

  <style name="LightHorizontalDivider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">@drawable/divider_vertical_bright_opaque</item>
  </style>

  <style name="DarkHorizontalDivider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">@color/black54</item>
  </style>

  <style name="ListSectionHeaderDivider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">2dp</item>
    <item name="android:background">@color/accent</item>
  </style>

  <!-- DIVIDER END -->
  
