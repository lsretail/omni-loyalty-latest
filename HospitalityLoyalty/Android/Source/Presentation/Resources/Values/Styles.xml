  <!-- HOLO -->

  <style name="ProgressBarPresentation" parent="android:Widget.ProgressBar.Horizontal">
    <item name="android:progressDrawable">@drawable/presentation_progress_horizontal_holo_light</item>
    <item name="android:minHeight">16dip</item>
    <item name="android:maxHeight">16dip</item>
  </style>

  <style name="ListViewPresentation" parent="android:Widget.ListView">
    <item name="android:listSelector">@drawable/presentation_list_selector_holo_light</item>
  </style>

  <style name="ListViewPresentation.White" parent="android:Widget.ListView.White">
    <item name="android:listSelector">@drawable/presentation_list_selector_holo_light</item>
  </style>

  <style name="SpinnerItemPresentation" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    <item name="android:textColor">#000000</item>
  </style>

  <!-- HOLO END -->

  <style name="LazyListImage">
    <item name="android:scaleType">centerCrop</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
  </style>

